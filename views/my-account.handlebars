<h1>My Account</h1>
{{#section 'jquery'}}
    <script>
        var active_user = 0;

        $(document).ready(function () {
            if (active_user == 0) {
                $("#account_display").addClass("hide");
            } else {
                $("#form_display").addClass("hide");
                $("#account_display").removeClass("hide");
            }
        });

    </script>
{{/section}}
<div id="form_display">
    <div id="login_form">
        <form role="form" action="/login" method="POST">
            <h3>Login to your account: </h3>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <div class="form-group">
                <label for="fieldUsername" class="control-label">Username: </label>
                <input type="text" class="form-control" required id="fieldUsername" name="username">
            </div>
            <div class="form-group">
                <label for="fieldPassword" class="control-label">Password: </label>
                    <input type="text" class="form-control" required id="fieldPassword" name="password">
            </div>
            <div class="form-group">
                <div class="">
                    <button type="submit" class="btn btn-default">Log In</button>
                </div>
            </div>
        </form>
    </div>
    <div id="signup_form">
        <form role="form" action="/signup" method="POST">
            <h3>Not yet a member? Sign up here: </h3>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <div class="form-group">
                <label for="fieldUsername" class="control-label">Username: </label>
                <input type="text" class="form-control" required id="fieldUsername" name="username">
            </div>
            <div class="form-group">
                <label for="fieldEmail" class="control-label">Email: </label>
                <input type="email" class="form-control" required id="fieldEmail" name="email">
            </div>
            <div class="form-group">
                <label for="fieldPassword" class="control-label">Password: </label>
                <input type="text" class="form-control" required id="fieldPassword" name="password">
            </div>
            <div class="form-group">
                <div class="">
                    <button type="submit" class="btn btn-default">Sign Up</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div id="account_display">
    <!--favourites, my recipes-->
    <h2 class="section_title">My Recipes: </h2>
    <div id="my-recipes">
        <!--Insert code to query database and pull up user's submitted recipes here-->
    </div>
    <h2 class="section_title">My Favourites: </h2>
    <div id="my-favourites">
        <!--Insert code to query database and get all the user's favourited recipes to put here-->
    </div>
</div>
